<h1>
  All posts
  <%= link_to 'New Post', new_post_path, class: "btn btn-default pull-right" %>
</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th width="140px">Created at</th>
      <th>Score</th>
      <th width="100px"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.author.name %></td>
        <td><%= kind_time post.created_at %></td>
        <td><%= post.score %></td>
        <td>
          <% if can? :edit, post %>
            <%= link_to "Edit", edit_post_path(post) %> |
            <%= link_to "Delete", post, methods: :delete, data: { confirm: "Are you sure?" } %>
          <% end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
