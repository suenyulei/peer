<h1>
  All posts
  <%= link_to 'New Post', new_post_path, class: "btn btn-default pull-right" %>
</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
